{
  "manifest_version": 2,
  "name": "LoaderFi Plugin",
  "version": "1.0",
  "description": "Chrome plugin for LoaderFi",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab"]
}
